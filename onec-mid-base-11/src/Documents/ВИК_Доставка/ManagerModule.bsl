Функция ПечатьАнкетыКлиента(МассивОбъектов, ОбъектыПечати)
	
	ТабличныйДокумент = Новый ТабличныйДокумент;
	
	Макет = УправлениеПечатью.МакетПечатнойФормы("Документ.ВИК_Доставка.ПФ_MXL_АнкетаКлиента");
	
	ОбластьШапка = Макет.ПолучитьОбласть("Шапка");
	
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	|	ВИК_Доставка.Ссылка КАК Ссылка,
	|	ВИК_Доставка.Номер КАК Номер,
	|	ВИК_Доставка.Дата КАК Дата
	|ИЗ
	|	Документ.ВИК_Доставка КАК ВИК_Доставка
	|ГДЕ
	|	ВИК_Доставка.Ссылка В(&МассивОбъектов)";  
	
	Запрос.УстановитьПараметр("МассивОбъектов", МассивОбъектов); 
	
	Выборка = Запрос.Выполнить().Выбрать();  
	
	ПервыйДокумент = Истина;  
	
	Пока Выборка.Следующий() Цикл 
		
		Если Не ПервыйДокумент Тогда
			// Все документы нужно выводить на разных страницах.
			ТабличныйДокумент.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;
		
		ПервыйДокумент = Ложь; 
		
		НомерСтрокиНачало = ТабличныйДокумент.ВысотаТаблицы + 1;
		
		ПараметрыОбласти = Новый Структура;
		ПараметрыОбласти.Вставить("Дата", Формат(Выборка.Дата,  "ДЛФ=DD"));      
		ПараметрыОбласти.Вставить("Номер", ПрефиксацияОбъектовКлиентСервер.НомерНаПечать(Выборка.Номер));
		
		ОбластьШапка.Параметры.Заполнить(ПараметрыОбласти);
		
		ТабличныйДокумент.Вывести(ОбластьШапка); 
		
		ДанныеQRКода = ГенерацияШтрихкода.ДанныеQRКода("https://habr.com/ru/", 2, 120);
				
		Если НЕ ТипЗнч(ДанныеQRКода) = Тип("ДвоичныеДанные") Тогда
			ТекстСообщения = НСтр("ru = 'Не удалось сформировать QR-код.
			|Технические подробности см. в журнале регистрации.'");
			ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);
		Иначе
			КартинкаQRКода = Новый Картинка(ДанныеQRКода);
			ОбластьШапка.Рисунки.СсылкаНаДокументДоставки.Картинка = КартинкаQRКода;
		КонецЕсли;
		
		// В табличном документе необходимо задать имя области, в которую был 
		// выведен объект. Нужно для возможности печати комплектов документов.
		УправлениеПечатью.ЗадатьОбластьПечатиДокумента(ТабличныйДокумент, 
		НомерСтрокиНачало, ОбъектыПечати, Выборка.Ссылка);	
		
	КонецЦикла;
	
	Возврат ТабличныйДокумент; 
	
КонецФункции

Функция ПечатьТранспортнойНакладной(МассивОбъектов, ОбъектыПечати)
	
	ТабличныйДокумент = Новый ТабличныйДокумент;
	
	Макет = УправлениеПечатью.МакетПечатнойФормы("Документ.ВИК_Доставка.ПФ_MXL_ТранспортнаяНакладная");
	
	ОбластьШапка = Макет.ПолучитьОбласть("Шапка");      
	ОбластьСтрокаТаблицы = Макет.ПолучитьОбласть("СтрокаТаблицы");
	ОбластьПодвал = Макет.ПолучитьОбласть("Подвал");
	
	
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	               |	ВИК_Доставка.Ссылка КАК Ссылка,
	               |	ВИК_Доставка.Номер КАК Номер,
	               |	ВИК_Доставка.Дата КАК Дата,
	               |	ВИК_Доставка.Организация КАК Организация,
	               |	ВИК_Доставка.Контрагент КАК Контрагент,
	               |	ВИК_Доставка.Товары.(
	               |		НомерСтроки КАК Номер,
	               |		Номенклатура КАК Номенклатура,
	               |		Количество КАК Количество
	               |	) КАК Товары
	               |ИЗ
	               |	Документ.ВИК_Доставка КАК ВИК_Доставка
	               |ГДЕ
	               |	ВИК_Доставка.Ссылка В(&МассивОбъектов)";  
	
	Запрос.УстановитьПараметр("МассивОбъектов", МассивОбъектов); 
	
	Выборка = Запрос.Выполнить().Выбрать();  
	
	ПервыйДокумент = Истина;  
	
	Пока Выборка.Следующий() Цикл 
		
		Если Не ПервыйДокумент Тогда
			// Все документы нужно выводить на разных страницах.
			ТабличныйДокумент.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;
		
		ПервыйДокумент = Ложь; 
		
		НомерСтрокиНачало = ТабличныйДокумент.ВысотаТаблицы + 1;
		
		ПараметрыОбласти = Новый Структура;
		ПараметрыОбласти.Вставить("Дата", Формат(Выборка.Дата,  "ДЛФ=DD"));      
		ПараметрыОбласти.Вставить("Номер", ПрефиксацияОбъектовКлиентСервер.НомерНаПечать(Выборка.Номер));
		ПараметрыОбласти.Вставить("Организация", Выборка.Организация); 
		ПараметрыОбласти.Вставить("Контрагент", Выборка.Контрагент); 
		
		ОбластьШапка.Параметры.Заполнить(ПараметрыОбласти);
		
		ТабличныйДокумент.Вывести(ОбластьШапка);  
		
		ВыборкаСтроки = Выборка.Товары.Выбрать();  
		Пока ВыборкаСтроки.Следующий() Цикл
			ОбластьСтрокаТаблицы.Параметры.Заполнить(ВыборкаСтроки);
			ТабличныйДокумент.Вывести(ОбластьСтрокаТаблицы);   
		КонецЦикла; 		
		
		ТабличныйДокумент.Вывести(ОбластьПодвал);
		
		ДанныеQRКода = ГенерацияШтрихкода.ДанныеQRКода("https://habr.com/ru/", 2, 120);
		
		Если НЕ ТипЗнч(ДанныеQRКода) = Тип("ДвоичныеДанные") Тогда
			ТекстСообщения = НСтр("ru = 'Не удалось сформировать QR-код.
			|Технические подробности см. в журнале регистрации.'");
			ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);
		Иначе
			КартинкаQRКода = Новый Картинка(ДанныеQRКода);
			ОбластьШапка.Рисунки.СсылкаНаДокументДоставки.Картинка = КартинкаQRКода;
		КонецЕсли;
		
		// В табличном документе необходимо задать имя области, в которую был 
		// выведен объект. Нужно для возможности печати комплектов документов.
		УправлениеПечатью.ЗадатьОбластьПечатиДокумента(ТабличныйДокумент, 
		НомерСтрокиНачало, ОбъектыПечати, Выборка.Ссылка);	
		
	КонецЦикла;
	
	Возврат ТабличныйДокумент; 
	
КонецФункции


